{
  "version": 2,
  "builds": [
    { "src": "api/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1",
      "methods": ["GET", "POST"]
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/index.html",
      "headers": {
        "Cache-Control": "public, max-age=3600"
      }
    }
  ]
}
